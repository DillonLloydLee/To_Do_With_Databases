<html>
<head>
    <title>To Do List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/../styles.css">
</head>
    <body>
        <div class="container">

            <img src="/../paper.jpg" style='position:fixed;top:0px;left:0px;width:100%;height:100%;z-index:-1;'>

            <div class="col-sm-3"></div>
            <div class="col-sm-6">

                <h1><center>Welcome to To Do List!</center></h1>
                <hr>

                <p>Create a new category:</p>

                <form action="/categories" method="post">
                    <label for="name">Category name:</label>
                    <input id="name" name="name" type="text" required autofocus>

                    <button type="submit" class="btn-danger">Add category</button>
                </form>
                <br><br>

                {% if categories is not empty %}
                    <h2>Here are all your categories:</h2>
                    <ul>
                        {% for category in categories %}
                            <h3><a href="/categories/{{ category.getId }}">
                                {{ category.getName }}</a></h3>

                            <form action="/categories/{{ category.getId }}/delete" method="post">
                            <input name="_method" type="hidden" value="delete">
                            <button type="submit" class="btn-xs btn-danger">
                                Delete this category!</button>
                            </form>

                        {% endfor %}
                    </ul>
                {% else %}
                    <p> There are no categories yet!</p>
                {% endif %}
                <br>
                <hr>

                <center>
                    <form action="/" method="get">
                        <button type="submit" class="btn-danger">Home!</button>
                    </form>
                    <form action="/deleted_tasks" method="post">
                        <button type="submit" class="btn-danger">Delete tasks!</button>
                    </form>
                    <form action="/deleted_categories" method="post">
                        <button type="submit" class="btn-danger">Delete categories!</button>
                    </form>
                </center>

            </div>
            <div class="col-sm-3"></div>

        </div>
    </body>
</html>
